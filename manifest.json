{
  "manifest_version": 3,
  "name": "Preview Image Grabber",
  "version": "1.0",
  "description": "Get the preview image from a given link.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "src/assets/pig48x48.png",
    "128": "src/assets/pig128x128.png"
  }
}
